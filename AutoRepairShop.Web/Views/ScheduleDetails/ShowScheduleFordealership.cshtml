@model IEnumerable<AutoRepairShop.Web.Data.Entities.ScheduleDetail>

@{
    ViewData["Title"] = "Schedules";
}


<section class="panel">
    <div class="panel-body">
        <div class="inner-toolbar clearfix">
            <ul>
                <li class="right">
                    <ul class="nav nav-pills nav-pills-primary">
                        <li>
                            <label>Go to</label>
                        </li>
                        <li>
                            <a asp-action="MakeScheduleForClientInit" class="mb-xs mt-xs mr-xs btn btn-lg btn-primary" style="width: 250px">New Schedule</a>
                        </li>
                        <li>
                            <a asp-action="AddVehicleNoUser" asp-controller="Vehicles"   class="mb-xs mt-xs mr-xs btn btn-lg btn-primary" style="width: 250px">Add Vehicle no User</a>
                        </li>
                        <li>
                            <a asp-action="MakeScheduleForClientNoUserInit" class="mb-xs mt-xs mr-xs btn btn-lg btn-primary" style="width: 250px">New Schedule No User</a>
                        </li>
                    </ul>
                </li>
            </ul>
        </div>


        <table class="table table-bordered table-striped mb-none" id="datatable-editable">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Vehicle.LicencePlate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Dealership.DealerShipName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ActiveSchedule.Services.ServiceType)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ActiveSchedule.ScheduleDay)
                    </th>
                    <th>
                        Options
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Vehicle.LicencePlate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Dealership.DealerShipName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ActiveSchedule.Services.ServiceType)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ActiveSchedule.ScheduleDay)
                        </td>


                        <td class="actions">
                            <a asp-action="EditSchedule" asp-route-id="@item.Id">Edit</a>
                            <a asp-action="DetailsSchedule" asp-route-id="@item.Id">Details</a>
                            <a asp-action="DeleteScheduleDealership" asp-route-id="@item.Id">Delete</a>
                            <a asp-action="StartRepair" asp-controller="Repairs" asp-route-id="@item.Id">Repair</a>
                        </td>
                    </tr>
                }

            </tbody>
        </table>

    </div>
</section>
