@model AutoRepairShop.Web.Models.ActiveScheduleViewModel.InitScheduleByDealershipNoUser
@{
    ViewData["Title"] = "Create Schedule";
}



<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <div class="panel-body">
                <form method="post">
                    <input type="hidden" asp-for="DealershipId" />
                    <input type="hidden" asp-for="UserID" />


                    <div class="form-group">
                        <label class="col-md-3 control-label" asp-for="ServiceId"></label>
                        <div class="col-md-6">
                            <select class="form-control" id="services" asp-items="Model.Services" asp-for="ServiceId">
                            </select>
                            <span asp-validation-for="ServiceId" class="text-danger"></span>
                        </div>

                    </div>


                    <div class="form-group">
                        <label class="col-md-3 control-label" asp-for="Licenceplate"></label>
                        <div class="col-md-6">
                            <input type="text" class="form-control" asp-for="Licenceplate">
                            <span asp-validation-for="Licenceplate" class="text-danger"></span>
                        </div>
                    </div>

                    <div style="text-align: center">
                        <div class="form-group">
                            <button type="submit" class="mb-xs mt-xs mr-xs btn btn-lg btn-primary" style="width: 200px">Continue</button>
                            <a asp-action="ShowScheduleForDealership" formnovalidate class="mb-xs mt-xs mr-xs btn btn-lg btn-primary" style="width: 200px">Exit</a>
                        </div>
                    </div>

                </form>


            </div>
        </section>
    </div>
</div>










@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

}
