@model AutoRepairShop.Web.Data.Entities.Service

@{
    ViewData["Title"] = "Edit Service";
}


<div class="row">
    <div class="col-lg-12">
        <section class="panel">

            <div class="panel-body">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" />

                    <div class="form-group">
                        <div class="checkbox">
                            <label>
                                <input asp-for="IsActive" /> @Html.DisplayNameFor(model => model.IsActive)
                            </label>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-md-3 control-label" asp-for="ServiceType"></label>
                        <div class="col-md-6">
                            <input type="text" class="form-control" id="inputDefault" asp-for="ServiceType">
                        </div>
                        <span asp-validation-for="ServiceType" class="text-warning"></span>
                    </div>

                    <div class="form-group">
                        <label class="col-md-3 control-label" asp-for="ServiceDescription"></label>
                        <div class="col-md-6">
                            <input type="text" class="form-control" id="inputDefault" asp-for="ServiceDescription">
                        </div>
                        <span asp-validation-for="ServiceDescription" class="text-warning"></span>
                    </div>


                    <div style="text-align: center">
                        <div class="form-group">
                            <button type="submit" class="mb-xs mt-xs mr-xs btn btn-lg btn-primary" style="width: 200px">Change</button>
                            <a asp-action="Index" formnovalidate class="mb-xs mt-xs mr-xs btn btn-lg btn-primary" style="width: 200px">Exit</a>
                            <button asp-action="Delete" asp-controller="Services" asp-route-id="Id" class="mb-xs mt-xs mr-xs btn btn-lg btn-primary" style="width: 200px">Delete Service</button>
                        </div>
                    </div>

                </form>
            </div>
        </section>

    </div>
</div>




@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
