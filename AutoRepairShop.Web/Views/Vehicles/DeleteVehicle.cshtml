@model AutoRepairShop.Web.Models.VehicleViewModels.DeleteVehicleViewModel

@{
    ViewData["Title"] = "Delete Vehicle";
}


<h3>Are you sure you want to delete this?</h3>


<h2>@ViewBag.Error </h2>




<section class="panel">
    <div class="panel-body tab-content">
        <div id="access-log" class="tab-pane active">
            <table class="table table-striped table-no-more table-bordered  mb-none">
                <thead>
                    <tr>
                        <th style="width: 25%; margin: auto"><span class="text-normal text-sm">Data</span></th>
                        <th style="width: 55%"><span class="text-normal text-sm">Vehicle Information</span></th>
                        @*<th style="width: 35%"><span class="text-normal text-sm">Message</span></th>*@
                    </tr>
                </thead>
                <tbody class="log-viewer">
                    <tr>
                        <td data-title="Type" class="pt-md pb-md">
                            @Html.DisplayNameFor(model => model.LicencePlate)
                        </td>
                        <td data-title="Date" class="pt-md pb-md">
                            @Html.DisplayFor(model => model.LicencePlate)
                        </td>
                    </tr>
                    <tr>
                        <td data-title="Type" class="pt-md pb-md">
                            @Html.DisplayNameFor(model => model.Brand)
                        </td>
                        <td data-title="Date" class="pt-md pb-md">
                            @Html.DisplayFor(model => model.Brand)
                        </td>
                    </tr>
                    <tr>
                        <td data-title="Type" class="pt-md pb-md">
                            @Html.DisplayNameFor(model => model.Model)
                        </td>
                        <td data-title="Date" class="pt-md pb-md">
                            @Html.DisplayFor(model => model.ModelName)
                        </td>
                    </tr>
                    <tr>
                        <td data-title="Type" class="pt-md pb-md">
                            @Html.DisplayNameFor(model => model.EngineCapacity)
                        </td>
                        <td data-title="Date" class="pt-md pb-md">
                            @Html.DisplayFor(model => model.EngineCapacity)
                        </td>
                    </tr>
                    <tr>
                        <td data-title="Type" class="pt-md pb-md">
                            @Html.DisplayNameFor(model => model.Fuel)
                        </td>
                        <td data-title="Date" class="pt-md pb-md">
                            @Html.DisplayFor(model => model.FuelType)
                        </td>
                    </tr>
                    <tr>
                        <td data-title="Type" class="pt-md pb-md">
                            @Html.DisplayNameFor(model => model.ColorName)
                        </td>
                        <td data-title="Date" class="pt-md pb-md">
                            @Html.DisplayFor(model => model.ColorName)
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>

        <form asp-action="DeleteVehicle" style="text-align: center">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="mb-xs mt-xs mr-xs btn btn-lg btn-primary" style="width: 200px">Delete</button>
            <button asp-action="Index" formnovalidate class="mb-xs mt-xs mr-xs btn btn-lg btn-primary" style="width: 200px">Exit</button>
        </form>

    </div>

</section>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}