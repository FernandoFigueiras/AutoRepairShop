@model AutoRepairShop.Web.Models.VehicleViewModels.AddVehicleViewModel

@{
    ViewData["Title"] = "Add Vehicle";
}


<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="LicencePlate">Licence PLate</label>
                <input asp-for="LicencePlate" class="form-control" />
                <span asp-validation-for="LicencePlate" class="text-warning"></span>
            </div>



            <div class="form-group">
                <label asp-for="BrandId" class="control-label">Brand</label>
                <select asp-for="BrandId" asp-items="Model.Brands" class="form-control"></select>
                <span asp-validation-for="BrandId" class="text-danger"></span>
            </div>


            <div class="form-group">
                <label asp-for="ModelId" class="control-label">Model</label>
                <select asp-for="ModelId" asp-items="Model.Models" class="form-control"></select>
                <span asp-validation-for="ModelId" class="text-danger"></span>
            </div>

            <div id="show"style="display:none">
                <div class="form-group" >
                    <label asp-for="ModelName">Other Model Not Listed</label>
                    <input asp-for="ModelName" class="form-control" value="" />
                    <span asp-validation-for="ModelName" class="text-warning"></span>
                </div>
            </div>
            

            <div class="form-group">
                <label asp-for="EngineCapacity">Engine Capacity</label>
                <input asp-for="EngineCapacity" class="form-control" />
                <span asp-validation-for="EngineCapacity" class="text-warning"></span>
            </div>


            <div class="form-group">
                <label asp-for="FuelId" class="control-label">Fuel</label>
                <select asp-for="FuelId" asp-items="Model.Fuels" class="form-control"></select>
                <span asp-validation-for="FuelId" class="text-danger"></span>
            </div>


            <div class="form-group">
                <label asp-for="ColorId" class="control-label">Color</label>
                <select asp-for="ColorId" asp-items="Model.Colors" class="form-control"></select>
                <span asp-validation-for="ColorId" class="text-danger"></span>
            </div>


            <div class="form-group">
                <input type="submit" value="Add New Vehicle" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script type="text/javascript">
        $(document).ready(function () {
            $("#BrandId").change(function () {
   
                $("#ModelId").empty();
                $.ajax({
                    type: 'POST',
                    url: '@Url.Action("GetModelsAsync")',
                    dataType: 'json',
                    data: { brandId: $("#BrandId").val() },
                    
                    success: function (models) {
 
                        $("#ModelId").append('<option value="0">(Select a model...)</option>');
                        
                        $.each(models, function (i, model) {
                            $("#ModelId").append('<option value="'
                                + model.id + '">'
                                + model.modelName + '</option>');
                        });

                        var test = -Infinity;
                        $.each(models, function (i, model) {
                            if (model.id >= test) {
                                test = model.id;
                            }
                        });

                        
                        $("#ModelId").append(`<option value="${/*models.length+1*/test+1}">(Other not listed)</option>`);
                    },
                    error: function (ex) {
                     
                        alert('Failed to retrieve model.' + ex.responseText);
                    }
                });
                return false;
            })
            $("#ModelId").change(function () {

                if ($("#ModelId option:selected").html() === "(Other not listed)") {
                    $("#show").show();
                }
                else {
                    $("#show").hide();
                }
            });
            //$("#ModelId").change(function () {

            //    if ($("#ModelId").val() == $('#ModelId option').length - 1) {
            //        $("#show").show()
            //    }
            //    else {
            //        $("#show").hide()
            //    }
            //});
        });
    </script>

}

