@model AutoRepairShop.Web.Data.Entities.BrandModel

@{
    ViewData["Title"] = "Edit Model";
}




<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <div class="panel-body">
                <form asp-action="EditModel">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" />


                    <div class="form-group">
                        <label class="col-md-3 control-label" asp-for="ModelName"></label>
                        <div class="col-md-6">
                            <input type="text" class="form-control" id="inputDefault" asp-for="ModelName">
                        </div>
                        <span asp-validation-for="ModelName" class="text-warning"></span>
                    </div>
                    <div style="text-align: center">
                        <div class="form-group">
                            <button type="submit" class="mb-xs mt-xs mr-xs btn btn-lg btn-primary" style="width: 200px">Change</button>
                            <a asp-action="Details" asp-controller="Brands" asp-route-id="@ViewBag.Id" class="mb-xs mt-xs mr-xs btn btn-lg btn-primary" style="width: 200px">Exit</a>
                            <button asp-action="DeleteModel" asp-controller="Brands" asp-route-id="Id" class="mb-xs mt-xs mr-xs btn btn-lg btn-primary" style="width: 200px">Delete Model</button>
                        </div>
                    </div>
                </form>

            </div>
        </section>

    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
