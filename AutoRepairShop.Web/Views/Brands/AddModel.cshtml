@model AutoRepairShop.Web.Models.ModelBrand.ModelBrandViewModel

@{
    ViewData["Title"] = "Add Model";
}



<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <div class="panel-body">
                <form  asp-action="AddModel">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="BrandId" />




                    <div class="form-group">
                        <label class="col-md-3 control-label" asp-for="Name"></label>
                        <div class="col-md-6">
                            <input type="text" class="form-control" id="inputDefault" asp-for="Name">
                        </div>
                        <span asp-validation-for="Name" class="text-warning"></span>
                    </div>



                    <div style="text-align: center">
                        <div class="form-group">
                            <button type="submit" class="mb-xs mt-xs mr-xs btn btn-lg btn-primary" style="width: 200px">Create</button>
                            <a asp-action="Details"  asp-route-id="@ViewBag.Id" formnovalidate class="mb-xs mt-xs mr-xs btn btn-lg btn-primary" style="width: 200px">Exit</a>
                        </div>
                    </div>

                </form>
            </div>
        </section>


    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}