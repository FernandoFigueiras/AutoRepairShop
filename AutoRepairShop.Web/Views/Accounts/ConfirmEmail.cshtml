@model AutoRepairShop.Web.Data.Entities.User
@{
    ViewData["Title"] = "Edit User";
}

<h2>Hello @ViewBag.User, your email is now confirmed</h2>

<h2>Please click the button below to resume your registration</h2>

<div class="row">
    <div class="col-md-4 offset-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="Email" />


            <div class="form-group">
                <input type="submit" value="Resume Registration" class="btn btn-primary" />
            </div>

        </form>
    </div>
</div>

