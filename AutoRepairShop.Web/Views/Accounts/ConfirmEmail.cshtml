@model AutoRepairShop.Web.Data.Entities.User
@{
    ViewData["Title"] = "Edit User";
}

<div style="text-align: center">
    <h3>Hello @ViewBag.User, your email is now confirmed</h3>

    <h4>Please click the button below to resume your registration</h4>

    <form method="post">


        <div asp-validation-summary="ModelOnly"></div>
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="Email" />
        <div style="text-align: center">

            <div class="form-group">
                <button type="submit" class="mb-xs mt-xs mr-xs btn btn-lg btn-primary">Resume Registration</button>
            </div>
        </div>



    </form>
</div>



