@model AutoRepairShop.Web.Models.Account.ResetPasswordViewModel
@{
    ViewData["Title"] = "Recover Password";
}



<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <form method="post" enctype="multipart/form-data">
                <div class="panel-body" style="margin-top: 2%; margin-bottom: auto; margin-left: 25%; margin-right: 25%">
                    <div asp-validation-summary="ModelOnly"></div>
                    <input type="hidden" asp-for="@Model.User.Id" />
                    <input type="hidden" asp-for="@Model.User.Email" />
                    <input type="hidden" asp-for="@Model.User.UserName" />



                    <div class="form-group">
                        <label class="col-md-3 control-label" asp-for="NewPassword">New Password</label>
                        <div class="col-md-6">
                            <input type="text" asp-for="NewPassword" maxlength="50" class="form-control" id="inputDefault">
                        </div>
                        <span asp-validation-for="NewPassword" class="text-warning"></span>
                    </div>


                    <div class="form-group">
                        <label class="col-md-3 control-label" asp-for="ConfirmPassword">Confirm Password</label>
                        <div class="col-md-6">
                            <input type="text" asp-for="ConfirmPassword" maxlength="50" class="form-control" id="inputDefault">
                        </div>
                        <span asp-validation-for="ConfirmPassword" class="text-warning"></span>
                    </div>


                    <div class="form-group">
                        <section class="panel" style="text-align: center">
                            <div class="panel-body">
                                <p class="m-none">
                                    <button type="submit" class="mb-xs mt-xs mr-xs btn btn-lg btn-primary">Reset Password</button>
                                </p>
                            </div>
                        </section>
                    </div>

                    <div class="text-success">@ViewBag.UserMessage</div>



                </div>
            </form>

            
        </section>


    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}