@model AutoRepairShop.Web.Models.Account.UpdateUserDataViewModel
@{
    ViewData["Title"] = "My Profile";

}


<div class="row">
    <div class="col-md-4 col-lg-3">

        <section class="panel">
            <div class="panel-body">
                <div class="thumb-info mb-md">
                    @if (Model.User.ImageUrl != string.Empty)
                    {
                    <a>
                        <img src="@Url.Content(Model.User.ImageUrl)" class="rounded img-responsive" />
                    </a>
                    }
                    else
                    {
                        <img src="~/images/ico/avatar.png" class="rounded img-responsive" />
                    }
                    <div class="thumb-info-title">

                        <span class="thumb-info-inner">@this.User.Identity.Name</span>
                        @if (this.User.IsInRole("Admin"))
                        {
                            <span class="thumb-info-type">Admin</span>
                        }
                        else if (this.User.IsInRole("Customer"))
                        {
                            <span class="thumb-info-type">Customer</span>
                        }

                    </div>
                </div>



            </div>
        </section>



    </div>
    <div class="col-md-8 col-lg-6">

        <div class="tabs">
            <ul class="nav nav-tabs tabs-primary">
                <li class="active">
                    <a href="#overview" data-toggle="tab">Overview</a>
                </li>
                <li>
                    <a href="#edit" data-toggle="tab">Edit</a>
                </li>
            </ul>
            <div class="tab-content">
                <div id="overview" class="tab-pane active">
                    <h4 class="mb-md">Talk to us</h4>

                    <section class="simple-compose-box mb-xlg">
                        <form method="get" action="/">
                            <textarea name="message-text" data-plugin-textarea-autosize placeholder="Your message here" rows="1"></textarea>
                        </form>
                        <div class="compose-box-footer">
                            <ul class="compose-toolbar">
                                <li>
                                    <a href="#"><i class="fa fa-camera"></i></a>
                                </li>
                                <li>
                                    <a href="#"><i class="fa fa-map-marker"></i></a>
                                </li>
                            </ul>
                            <ul class="compose-btn">
                                <li>
                                    <a class="btn btn-primary btn-xs">Post</a>
                                </li>
                            </ul>
                        </div>
                    </section>

