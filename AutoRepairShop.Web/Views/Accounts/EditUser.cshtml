@model AutoRepairShop.Web.Models.Account.UpdateUserDataViewModel
@{
    ViewData["Title"] = "Edit User";
}

<h2>Edit user data</h2>


<div class="row">
    <div class="col-md-4 offset-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="UserName" />
            <input type="hidden" asp-for="Email" />

            <div class="form-group">
                <label asp-for="FirstName">First Name</label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-warning"></span>
            </div>

            <div class="form-group">
                <label asp-for="LastName">Last Name</label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-warning"></span>
            </div>


            <div class="form-group">
                <label asp-for="Address">Address</label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-warning"></span>
            </div>

            <div class="form-group">
                <label asp-for="ZipCode4">Zip Code</label>
                <input asp-for="ZipCode4" class="form-control" /> - <input asp-for="ZipCode3" class="form-control" />
                <span asp-validation-for="ZipCode4" class="text-warning"></span>
            </div>


            <div class="form-group">
                <label asp-for="PhoneNumber">Phone Number</label>
                <input asp-for="PhoneNumber" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-warning"></span>
            </div>

            <div class="form-group">
                <label asp-for="TaxPayerNumber">TaxPayer Number</label>
                <input asp-for="TaxPayerNumber" class="form-control" />
                <span asp-validation-for="TaxPayerNumber" class="text-warning"></span>
            </div>


            <div class="form-group">
                <input type="submit" value="Edit User Data" class="btn btn-primary" />
                <a asp-action="ChangePassword" class="btn btn-success">Change Password</a>
            </div>

            <div class="text-success">@ViewBag.Message</div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}