@model AutoRepairShop.Web.Models.Account.RecoverPasswordViewModel
@{
    ViewData["Title"] = "Recover Password";
}




<!-- start: page -->
<section class="body-sign">
    <div class="center-sign">
        <div class="panel panel-sign">
            <div class="panel-title-sign mt-xl text-right">
                <h2 class="title text-uppercase text-bold m-none"><i class="fa fa-user mr-xs"></i> Recover Password</h2>
            </div>
            <div class="panel-body">
                <div class="alert alert-info">
                    <p class="m-none text-semibold h6">Enter your e-mail below and we will send you reset instructions!</p>
                </div>

                <form method="post">
                    <div asp-validation-summary="ModelOnly"></div>
                    <div class="form-group mb-none">
                        <div class="input-group">
                            <input asp-for="Email" placeholder="E-mail" class="form-control input-lg" />
                            <span class="input-group-btn">
                                <button class="btn btn-primary btn-lg" type="submit">Reset!</button>
                            </span>
                        </div>
                    </div>
                    <span asp-validation-for="Email" class="text-warning"></span>

                    <p class="text-center mt-lg">Remembered? <a asp-action="Login" asp-controller="Accounts">Sign In!</a>
                </form>
            </div>
            <div class="text-success">
                <p>@ViewBag.Message</p>
            </div>
        </div>
        

    </div>
</section>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
