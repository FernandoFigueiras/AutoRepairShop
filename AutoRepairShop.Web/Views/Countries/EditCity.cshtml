@model AutoRepairShop.Web.Data.Entities.City

@{
    ViewData["Title"] = "Edit city";
}


<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <div class="panel-body">
                <form asp-action="EditDistrict">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="District" />


                    <div class="form-group">
                        <label class="col-md-3 control-label" asp-for="CityName"></label>
                        <div class="col-md-6">
                            <input type="text" class="form-control" id="inputDefault" asp-for="CityName">
                        </div>
                        <span asp-validation-for="CityName" class="text-warning"></span>
                    </div>
                    <div style="text-align: center">
                        <div class="form-group">
                            <button type="submit" class="mb-xs mt-xs mr-xs btn btn-lg btn-primary" style="width: 200px">Change</button>
                            <a asp-action="DetailsDistrict" asp-controller="Countries" asp-route-id="@Model.DistrictId" class="mb-xs mt-xs mr-xs btn btn-lg btn-primary" style="width: 200px">Exit</a>
                            <button asp-action="DeleteCity" asp-controller="Countries" asp-route-id="Id" class="mb-xs mt-xs mr-xs btn btn-lg btn-primary" style="width: 200px">Delete Model</button>
                        </div>
                    </div>
                </form>

            </div>
        </section>

    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
